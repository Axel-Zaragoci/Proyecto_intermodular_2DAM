<UserControl x:Class="desktop_app.Views.BookingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:desktop_app.Views"
             xmlns:viewmodels="clr-namespace:desktop_app.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="800"
             Style="{StaticResource UserControlBase}">
    <UserControl.DataContext>
        <viewmodels:BookingViewModel/>
    </UserControl.DataContext>
    
    <Grid Background="Transparent"  Margin="22">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Border Style="{StaticResource HeaderWrapper}">
                <DockPanel LastChildFill="False" VerticalAlignment="Center">
                    <TextBlock Style="{StaticResource HeaderMainTitle}" DockPanel.Dock="Left" Text="Reservas"/>
                    
                    <Button Style="{StaticResource HeaderNavigateButton}" Content="+  Crear reserva" DockPanel.Dock="Right" Command="{Binding CreateBookingCommand}"/>
                </DockPanel>
        </Border>
        
        <StackPanel Grid.Row="1" HorizontalAlignment="Right" Margin="0 0 0 10">
            <Button Style="{StaticResource SaveBtn}" Content="Recargar" Command="{Binding ReloadBookingCommand}"/>
        </StackPanel>
        
        <ListView Grid.Row="2" ItemsSource="{Binding Bookings}" SizeChanged="ListView_SizeChanged" AlternationCount="2" ItemContainerStyle="{StaticResource AlternatingListViewItemStyle}" Margin="10 3" BorderThickness="0.5">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="" HeaderContainerStyle="{StaticResource TableHeader}" Width="60">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Style="{StaticResource UpdateBookingBtn}" Content="visibility" Command="{Binding DataContext.ShowBookingDetailsCommand, RelativeSource={RelativeSource AncestorType=ListView}}" CommandParameter="{Binding}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                    <GridViewColumn Header="Habitación" HeaderContainerStyle="{StaticResource TableHeader}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                    <TextBlock Text="{Binding RoomNumber}" Style="{StaticResource GridViewCellText}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                    <GridViewColumn Header="Cliente" HeaderContainerStyle="{StaticResource TableHeader}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                    <TextBlock Text="{Binding ClientName}" Style="{StaticResource GridViewCellText}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                    <GridViewColumn Header="Fecha de inicio" HeaderContainerStyle="{StaticResource TableHeader}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding CheckInDate, StringFormat='dd/MM/yyyy'}" Style="{StaticResource GridViewCellText}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                    <GridViewColumn Header="Fecha de fin" HeaderContainerStyle="{StaticResource TableHeader}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding CheckOutDate, StringFormat='dd/MM/yyyy'}" Style="{StaticResource GridViewCellText}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                    <GridViewColumn Header="Fecha de pago" HeaderContainerStyle="{StaticResource TableHeader}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding PayDate, StringFormat='dd/MM/yyyy'}" Style="{StaticResource GridViewCellText}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                    <GridViewColumn Header="Total de noches" HeaderContainerStyle="{StaticResource TableHeader}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding TotalNights}" Style="{StaticResource GridViewCellText}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                    <GridViewColumn Header="Estado" HeaderContainerStyle="{StaticResource TableHeader}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource StatusTextStyle}">
                                    <TextBlock Text="{Binding Status}" Style="{StaticResource GridViewCellText}" Foreground="#ffffff"/>
                                </Border>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                    <GridViewColumn Header="" HeaderContainerStyle="{StaticResource TableHeader}" Width="65">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Style="{StaticResource UpdateBookingBtn}" Content="edit" Command="{Binding DataContext.EditBookingCommand, RelativeSource={RelativeSource AncestorType=ListView}}" CommandParameter="{Binding}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                    <GridViewColumn Header="" HeaderContainerStyle="{StaticResource TableHeader}" Width="65">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Style="{StaticResource DeleteBookingBtn}" Content="delete" Command="{Binding DataContext.DeleteBookingCommand, RelativeSource={RelativeSource AncestorType=ListView}}" CommandParameter="{Binding}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>

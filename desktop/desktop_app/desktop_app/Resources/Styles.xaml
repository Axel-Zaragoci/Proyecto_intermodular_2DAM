<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <SolidColorBrush x:Key="Background-Primary" Color="#f7fbff"/>
    
    <Style x:Key="SideBar" TargetType="StackPanel">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#1e6fae" Offset="0"/>
                    <GradientStop Color="#0f4c75" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="SideBarButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="10 20"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Foreground" Value="#ffffff"/>
        <Setter Property="FontSize" Value="25"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Name="border" BorderThickness="0" BorderBrush="Black" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Left"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>        
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="#bde8f5"/>
                <Setter Property="Background" Value="#22FFFFFF"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style x:Key="UserControlBase" TargetType="UserControl">
        <Setter Property="Background" Value="#F8F6F0"/>
        <Setter Property="Foreground" Value="#1f3b4d"/>
    </Style>

    <Style x:Key="SideBarIcon" TargetType="Image">
        <Setter Property="Width" Value="25"/>
        <Setter Property="Margin" Value="0, 0, 15, 0"/>
    </Style>
    
    <Style x:Key="HeaderWrapper" TargetType="Border">
        <Setter Property="CornerRadius" Value="18"/>
        <Setter Property="Padding" Value="18"/>
        <Setter Property="Margin" Value="0, 0, 0, 16"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#1e6fae" Offset="0"/>
                    <GradientStop Color="#0f4c75" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="HeaderMainTitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="26"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <Style x:Key="HeaderNavigateButton" TargetType="Button">
        <Setter Property="Padding" Value="14, 0"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="#3c7896"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Height" Value="34"/>
        <Setter Property="Width" Value="150"/>
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="10" Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#f1f7fb"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#e5f0f8"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style x:Key="AlternatingListViewItemStyle" TargetType="ListViewItem"> 
        <Setter Property="Background" Value="#ffffff"/> 
        <Setter Property="BorderThickness" Value="0 1"/>
        <Setter Property="Padding" Value="5 150"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        
        <Setter Property="Foreground" Value="#1f3b4d"/>
        
        <Style.Triggers>
            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                <Setter Property="Background" Value="#f1f7fc"/>
            </Trigger>
            
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{Binding RelativeSource={RelativeSource Self}, Path=Background}"/>
            </Trigger>
            
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{Binding RelativeSource={RelativeSource Self}, Path=Background}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style x:Key="StatusTextStyle" TargetType="Border">
        <Setter Property="Background" Value="#ed6d6d"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Margin" Value="5 2"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Width" Value="auto"/>
        
        <Style.Triggers>
            <DataTrigger Binding="{Binding Status}" Value="Abierta">
                <Setter Property="Background" Value="#85ed6d"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
    
    <Style x:Key="TableHeader" TargetType="GridViewColumnHeader">
        <Setter Property="Background" Value="#f1f7fc"/>
        <Setter Property="BorderThickness" Value="0 "/>
        <Setter Property="Padding" Value="5 10"/>
        <Setter Property="Foreground" Value="#1f3b4d"/> 
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="FontSize" Value="14"/>
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GridViewColumnHeader">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderThickness="0"
                        Padding="{TemplateBinding Padding}">
                    
                        <ContentPresenter
                            VerticalAlignment="Center"
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            RecognizesAccessKey="True"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="GridViewCellText" TargetType="TextBlock">
        <Setter Property="Padding" Value="0 10"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <Style x:Key="UpdateBookingBtn" TargetType="Button">
        <Setter Property="Height" Value="32"/>
        <Setter Property="Padding" Value="16,0"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Background" Value="#3c7896"/>
        <Setter Property="BorderBrush" Value="#2e6784"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="10" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
                        
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#4a89a7"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#2e6784"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.6"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style x:Key="DeleteBookingBtn" TargetType="Button">
        <Setter Property="Background" Value="#ed6d6d"/>
        <Setter Property="Margin" Value="5 2"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Padding" Value="6,0"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="BorderBrush" Value="#ff0000"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="10" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        
        <Style.Triggers>
            <DataTrigger Binding="{Binding Status}" Value="Abierta">
                <Setter Property="IsEnabled" Value="False"/>
            </DataTrigger>
            
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#ed8080"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#eb5454"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.6"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <SolidColorBrush x:Key="Background-Primary" Color="#f7fbff"/>
    
    <!--
    ESTILOS DE LA BARRA LATERAL
    -->
    <Style x:Key="SideBar" TargetType="StackPanel">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#1e6fae" Offset="0"/>
                    <GradientStop Color="#0f4c75" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="SideBarButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="10 20"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Foreground" Value="#ffffff"/>
        <Setter Property="FontSize" Value="25"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Name="border" BorderThickness="0" BorderBrush="Black" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Left"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>        
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="#bde8f5"/>
                <Setter Property="Background" Value="#22FFFFFF"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style x:Key="SideBarIcon" TargetType="Image">
        <Setter Property="Width" Value="25"/>
        <Setter Property="Margin" Value="0, 0, 15, 0"/>
    </Style>
    
    <!--
    ESTILOS BASE DE LOS UserControl
    -->
    <Style x:Key="UserControlBase" TargetType="UserControl">
        <Setter Property="Background" Value="#F8F6F0"/>
        <Setter Property="Foreground" Value="#1f3b4d"/>
    </Style>

    <!--
    ESTILOS DE LAS CABECERAS
    -->
    <Style x:Key="HeaderWrapper" TargetType="Border">
        <Setter Property="CornerRadius" Value="17"/>
        <Setter Property="Padding" Value="16 20"/>
        <Setter Property="Margin" Value="0, 0, 0, 14"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#1e6fae" Offset="0"/>
                    <GradientStop Color="#0f4c75" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="HeaderMainTitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="26"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <Style x:Key="IdWrapper" TargetType="Border">
        <Setter Property="Background" Value="#1e5c8a"/>
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="Padding" Value="10, 4"/>
        <Setter Property="Margin" Value="0, 8, 0, 0"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>
    
    <Style x:Key="UpdateIdStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#ffffff"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    
    <Style x:Key="HeaderNavigateButton" TargetType="Button">
        <Setter Property="Padding" Value="14, 0"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="#3c7896"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Height" Value="34"/>
        <Setter Property="Width" Value="150"/>
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="4" Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#f1f7fb"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#e5f0f8"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style x:Key="ClearFiltersBtn" TargetType="Button">
        <Setter Property="Background" Value="#6c757d"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#6c757d"/>
        <Setter Property="Padding" Value="12 6"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="400"/>
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="4" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
                        
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#5a6268"/>
                <Setter Property="BorderBrush" Value="#545b62"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#545b62"/>
                <Setter Property="BorderBrush" Value="#4e555b"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!--
    ESTILOS DE LAS TABLAS
    -->
    <Style x:Key="AlternatingListViewItemStyle" TargetType="ListViewItem"> 
        <Setter Property="Background" Value="#ffffff"/> 
        <Setter Property="BorderThickness" Value="0 1"/>
        <Setter Property="Padding" Value="5 0"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        
        <Setter Property="Foreground" Value="#1f3b4d"/>
        
        <Style.Triggers>
            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                <Setter Property="Background" Value="#f1f7fc"/>
            </Trigger>
            
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{Binding RelativeSource={RelativeSource Self}, Path=Background}"/>
            </Trigger>
            
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{Binding RelativeSource={RelativeSource Self}, Path=Background}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style x:Key="StatusTextStyle" TargetType="Border">
        <Setter Property="Background" Value="#6c757d"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="4"/>
        
        <Style.Triggers>
            <DataTrigger Binding="{Binding Status}" Value="Abierta">
                <Setter Property="Background" Value="#28a745"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
    
    <Style x:Key="TableHeader" TargetType="GridViewColumnHeader">
        <Setter Property="Background" Value="#f1f7fc"/>
        <Setter Property="BorderThickness" Value="0 "/>
        <Setter Property="Padding" Value="5 10"/>
        <Setter Property="Foreground" Value="#1f3b4d"/> 
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="14"/>
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GridViewColumnHeader">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderThickness="0"
                        Padding="{TemplateBinding Padding}">
                    
                        <ContentPresenter
                            VerticalAlignment="Center"
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            RecognizesAccessKey="True"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="GridViewCellText" TargetType="TextBlock">
        <Setter Property="Padding" Value="12 6"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    
    <Style x:Key="UpdateBookingBtn" TargetType="Button">
        <Setter Property="Background" Value="#007bff"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#007bff"/>
        <Setter Property="Padding" Value="12 6"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="400"/>
        <Setter Property="FontFamily" Value="/Resources/#Material Icons Outlined"/>
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="4" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
                        
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#0069d9"/>
                <Setter Property="BorderBrush" Value="#0062cc"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#0062cc"/>
                <Setter Property="BorderBrush" Value="#005cbf"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Background" Value="#007bff"/>
                <Setter Property="BorderBrush" Value="#007bff"/>
                <Setter Property="Opacity" Value="0.65"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style x:Key="DeleteBookingBtn" TargetType="Button">
        <Setter Property="Background" Value="#dc3545"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#dc3545"/>
        <Setter Property="Padding" Value="12 6"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontFamily" Value="/Resources/#Material Icons Outlined"/>
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        
        <Style.Triggers>
            <DataTrigger Binding="{Binding Status}" Value="Abierta">
                <Setter Property="IsEnabled" Value="False"/>
            </DataTrigger>
            
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#c82333"/>
                <Setter Property="BorderBrush" Value="#bd2130"/>
            </Trigger>
            
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#bd2130"/>
                <Setter Property="BorderBrush" Value="#b21f2d"/>
            </Trigger>
            
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Background" Value="#dc3545"/>
                <Setter Property="BorderBrush" Value="#dc3545"/>
                <Setter Property="Opacity" Value=".65"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="DeleteOverlayBtn" TargetType="Button">
        <Setter Property="Width" Value="24"/>
        <Setter Property="Height" Value="24"/>
        <Setter Property="Background" Value="Red"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontFamily" Value="/Resources/#Material Icons Outlined"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Margin" Value="5"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="12">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#cc0000"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#990000"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!--
    ESTILOS DE LAS BARRAS DE BOTONES DE ACTUALIZAR/CREAR - CANCELAR
    -->
    <Style x:Key="BtnWrapper" TargetType="StackPanel">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="Margin" Value="0 20 0 0 "/>
    </Style>
    
    <Style x:Key="RedReturnBtn" TargetType="Button">
        <Setter Property="Background" Value="#dc3545"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Padding" Value="12 6"/>
        <Setter Property="Margin" Value="0 0 10 0"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="400"/>
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        
        <Style.Triggers>
            <DataTrigger Binding="{Binding Status}" Value="Abierta">
                <Setter Property="IsEnabled" Value="False"/>
            </DataTrigger>
            
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#c82333"/>
                <Setter Property="BorderBrush" Value="#bd2130"/>
            </Trigger>
            
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#bd2130"/>
                <Setter Property="BorderBrush" Value="#b21f2d"/>
            </Trigger>
            
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Background" Value="#dc3545"/>
                <Setter Property="BorderBrush" Value="#dc3545"/>
                <Setter Property="Opacity" Value=".65"/>
            </Trigger>
            
        </Style.Triggers>
    </Style>
    
    <Style x:Key="SaveBtn" TargetType="Button">
        <Setter Property="Background" Value="#007bff"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#007bff"/>
        <Setter Property="Padding" Value="12 6"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="400"/>
        <Setter Property="Margin" Value="0 0 10 0"/>
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="4" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
                        
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#0069d9"/>
                <Setter Property="BorderBrush" Value="#0062cc"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#0062cc"/>
                <Setter Property="BorderBrush" Value="#005cbf"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Background" Value="#007bff"/>
                <Setter Property="BorderBrush" Value="#007bff"/>
                <Setter Property="Opacity" Value="0.65"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style x:Key="CancelBtn" TargetType="Button">
        <Setter Property="Background" Value="#ffc107"/>
        <Setter Property="Foreground" Value="#212529"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#ffc107"/>
        <Setter Property="Padding" Value="12 6"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="400"/>
        <Setter Property="Margin" Value="0 0 10 0"/>
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="4" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
                        
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#e0a800"/>
                <Setter Property="BorderBrush" Value="#d39e00"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#d39e00"/>
                <Setter Property="BorderBrush" Value="#c69500"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="Foreground" Value="Transparent"/>
                <Setter Property="Background" Value="Transparent"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- 
    ESTILOS DE FORMULARIOS
    -->
    <Style x:Key="FormBorder" TargetType="Border">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="#E6E8EF"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="Padding" Value="14"/>
    </Style>
    
    <Style x:Key="LabelForm" TargetType="Label">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="#15507d"/>
        <Setter Property="Margin" Value="0,20,0,0"/>
    </Style>
    
    <Style x:Key="TextBoxForm" TargetType="TextBox">
        <Setter Property="BorderBrush" Value="#C5DDEE"/>
        <Setter Property="Padding" Value="10, 6"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="#1F3B4D"/>
        <Setter Property="Height" Value="40" />
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8">
                        <ScrollViewer x:Name="PART_ContentHost"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        
        <Style.Triggers>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="#1E88E5"/>
                <Setter Property="BorderThickness" Value="2"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Background" Value="#ebeeff"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style x:Key="DatePickerForm" TargetType="{x:Type DatePicker}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DatePicker}">
                    <Border
                        x:Name="OuterBorder"
                        CornerRadius="8"
                        Background="White"
                        BorderBrush="#C5DDEE"
                        BorderThickness="1"
                        Padding="10, 6"
                        Height="40">
                        <Grid x:Name="PART_Root">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <DatePickerTextBox x:Name="PART_TextBox"
                                               BorderBrush="Transparent"
                                               BorderThickness="0"
                                               Background="Transparent"
                                               HorizontalContentAlignment="Stretch"
                                               Padding="{TemplateBinding Padding}"
                                               VerticalContentAlignment="Center"
                                               Visibility="Visible"
                                               Grid.Column="0">
                            </DatePickerTextBox>
                            <Button Grid.Column="1" x:Name="PART_Button">
                                <Button.Style>
                                    <Style TargetType="{x:Type Button}">
                                        <Setter Property="Focusable" Value="False"/>
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type Button}">
                                                    <TextBlock FontFamily="/Resources/#Material Icons Outlined"
                                                               FontWeight="400"
                                                               FontSize="20"
                                                               Text="calendar_month"
                                                               Foreground="#1E88E5"/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Popup x:Name="PART_Popup" StaysOpen="False" AllowsTransparency="True" />
                        </Grid>
                    </Border>
                    
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="OuterBorder" Property="Background" Value="#EBEEFF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="FormCheckBox" TargetType="CheckBox">
        <Setter Property="Background" Value="#F3F5F8"/>
        <Setter Property="BorderBrush" Value="#E6E8EF"/>
        <Setter Property="BorderThickness" Value="1"/>
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <StackPanel Orientation="Horizontal">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Width="16"
                                Height="16"
                                CornerRadius="3"
                                Margin="0 0 5 0">
                            <TextBlock Text="done" FontFamily="/Resources/#Material Icons Outlined" x:Name="Check"/>
                        </Border>
                        <TextBlock Text="{TemplateBinding Content}" Margin="0 0 20 0" FontSize="12"/>
                    </StackPanel>
                    
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="False">
                            <Setter TargetName="Check" Property="Visibility" Value="Hidden"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="TextBoxDescriptionForm" TargetType="TextBox">
        <Setter Property="Height" Value="85"/>
        <Setter Property="AcceptsReturn" Value="True"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="Padding" Value="10, 6"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="#E6E8EF"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>
    
    <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
        <Border Background="Transparent"
                BorderBrush="Transparent"
                BorderThickness="0"
                CornerRadius="0">
            <Grid>
                <Path Data="M 0 0 L 8 0 L 4 5 Z"
                      Fill="White"
                      Width="12"
                      Height="8"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center" />
            </Grid>
        </Border>
    </ControlTemplate>
    
    <Style x:Key="DropdownStyle" TargetType="ComboBox">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="#1f3b4d" />
        <Setter Property="BorderBrush" Value="#c5ddee" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="10,0" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Height" Value="40" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10" />

                        <ToggleButton x:Name="ToggleButton"
                                      Focusable="False"
                                      IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                      ClickMode="Press"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      Margin="0"
                                      Cursor="Hand">
                            <ToggleButton.Template>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Border Background="Transparent">
                                        <Grid>
                                            <Path Data="M 0 0 L 8 0 L 4 5 Z"
                                                  Fill="White"
                                                  Width="12"
                                                  Height="8"
                                                  HorizontalAlignment="Right"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,15,0" />
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </ToggleButton.Template>
                        </ToggleButton>
                        
                        <ContentPresenter x:Name="ContentSite"
                                          IsHitTestVisible="False"
                                          Content="{TemplateBinding SelectionBoxItem}"
                                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                          ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                          Margin="15,0,40,0"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Left" />

                        <Popup x:Name="PART_Popup"
                               Placement="Bottom"
                               IsOpen="{TemplateBinding IsDropDownOpen}"
                               AllowsTransparency="True"
                               Focusable="False"
                               PopupAnimation="Slide">
                            <Grid MinWidth="{TemplateBinding ActualWidth}" MaxHeight="200">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="4">
                                    <ScrollViewer Margin="0" SnapsToDevicePixels="True">
                                        <ItemsPresenter />
                                    </ScrollViewer>
                                </Border>
                            </Grid>
                        </Popup>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="#6A4C93DD" />
                            <Setter TargetName="Bd" Property="BorderBrush" Value="#1e88e5" />
                            <Setter Property="Cursor"  Value="Hand" />
                        </Trigger>
                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                            <Setter TargetName="Bd" Property="BorderBrush" Value="#1e88e5"/>
                        </Trigger>
                        <Trigger Property="IsDropDownOpen" Value="True">
                            <Setter TargetName="Bd" Property="BorderBrush" Value="#1e88e5" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Bd" Property="Background" Value="#ebeeff"/>
                            <Setter TargetName="ToggleButton" Property="Background" Value="#ebeeff"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--
    ESTILO DE FORMULARIO DE IMÁGENES
    -->
    <Style x:Key="ImageBorderForm" TargetType="Border">
        <Setter Property="CornerRadius" Value="14"/>
        <Setter Property="BorderThickness" Value="1.5"/>
        <Setter Property="BorderBrush" Value="#D7DDE6"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>
    
    <Style x:Key="ImageTitle" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="#223045"/>
    </Style>
    
    <Style x:Key="ImageButton" TargetType="Button">
        <Setter Property="Height" Value="28"/>
        <Setter Property="Padding" Value="12,0"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="#1E5C8A"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="ImageName" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#6b778c"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>
    
    <Style x:Key="ImageCountBorder" TargetType="Border">
        <Setter Property="CornerRadius" Value="999"/>
        <Setter Property="Background" Value="#EEF4FF"/>
        <Setter Property="BorderBrush" Value="#CFE0FF"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10,3"/>
    </Style>
    
    <Style x:Key="ImageBorderMsg" TargetType="Border">
        <Setter Property="Margin" Value="0 12 0 0"/>
        <Setter Property="BorderBrush" Value="#E6E8EF"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Background" Value="#fafbfd"/>
        <Setter Property="Padding" Value="10"/>
    </Style>
    
    <Style x:Key="ImageViewBorder" TargetType="Border">
        <Setter Property="Width" Value="140"/>
        <Setter Property="Height" Value="105"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="BorderBrush" Value="#E6E8EF"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="#eef3f7"/>
        <Setter Property="Margin" Value="0 0 10 10"/>
        <Setter Property="ClipToBounds" Value="True"/>
    </Style>
    
    <Style x:Key="MainImageBorder" TargetType="Border">
        <Setter Property="Background" Value="#AA000000"/>
        <Setter Property="CornerRadius" Value="999"/>
        <Setter Property="Padding" Value="8, 3"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Margin" Value="8"/>
        <Setter Property="Visibility" Value="Collapsed"/>
        
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsMain}" Value="True">
                <Setter Property="Visibility" Value="Visible"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
    
    <!--
    ESTILOS DE TARJETAS DE HABITACIONES
    -->
    <DataTemplate x:Key="RoomCardTemplate">
        <Border Background="White"
            BorderBrush="#E6E8EF"
            BorderThickness="1"
            CornerRadius="16"
            Padding="16"
            Margin="0,0,18,18"
            SnapsToDevicePixels="True">

            <Grid>
                <Grid.RowDefinitions>
                    <!-- FOTO -->
                    <RowDefinition Height="Auto"/>

                    <!-- Cabecera -->
                    <RowDefinition Height="Auto"/>

                    <!-- Tipo -->
                    <RowDefinition Height="Auto"/>

                    <!-- Separador -->
                    <RowDefinition Height="Auto"/>

                    <!-- Max huéspedes -->
                    <RowDefinition Height="Auto"/>

                    <!-- Precio -->
                    <RowDefinition Height="Auto"/>

                    <!-- Separador -->
                    <RowDefinition Height="Auto"/>

                    <!-- Extras -->
                    <RowDefinition Height="Auto"/>

                    <!-- Spacer para empujar botones abajo -->
                    <RowDefinition Height="*"/>

                    <!-- Botones -->
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- ===== FOTO PRINCIPAL ===== -->
                <Border Grid.Row="0"
                    Height="140"
                    CornerRadius="12"
                    Margin="0,0,0,12"
                    Background="#EEF3F7"
                    ClipToBounds="True">

                    <Grid>
                        <!-- Imagen como brush en un Border interno -->
                        <Border CornerRadius="12">
                            <Border.Background>
                                <ImageBrush ImageSource="{Binding MainImageAbs}"
                                        Stretch="Fill"/>
                            </Border.Background>
                        </Border>

                        <!-- Texto si no hay imagen -->
                        <TextBlock Text="Sin imagen"
                   Foreground="#6B7280"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding MainImageAbs}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding MainImageAbs}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!-- Badge de media de reseñas -->
                        <Border HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Margin="8"
                                Background="#1F3B4D"
                                CornerRadius="8"
                                Padding="8,4">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasReviews}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="★" Foreground="#FFC107" FontSize="12" Margin="0,0,4,0"/>
                                <TextBlock Text="{Binding AverageRating, StringFormat='{}{0:F1}'}" 
                                           Foreground="White" 
                                           FontSize="12" 
                                           FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                </Border>



                <!-- ===== Cabecera: Habitación ===== -->
                <TextBlock Grid.Row="1"
                           FontSize="20"
                           FontWeight="Bold"
                           Text="{Binding RoomNumber, StringFormat=Habitación {0}}"/>

                <!-- ===== Tipo + Badge Disponibilidad ===== -->
                <Grid Grid.Row="2" Margin="0,6,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Foreground="#6B7280"
                               Text="{Binding Type}"
                               VerticalAlignment="Center"/>

                    <Border Grid.Column="1"
                            CornerRadius="999"
                            Padding="10,4"
                            VerticalAlignment="Center">

                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#10B981"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsAvailable}" Value="False">
                                        <Setter Property="Background" Value="#EF4444"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>

                        <TextBlock FontWeight="SemiBold" FontSize="10">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Text" Value="Disponible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsAvailable}" Value="False">
                                            <Setter Property="Text" Value="No disponible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Border>
                </Grid>

                <!-- ===== Separador 1 ===== -->
                <Separator Grid.Row="3"
                       Margin="0,12,0,12"
                       Background="#E5E7EB"/>

                <!-- ===== Max huéspedes ===== -->
                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Foreground="#6B7280"
                           Text="Máx. huéspedes:"/>

                    <TextBlock Grid.Column="1"
                           FontWeight="Bold"
                           Text="{Binding MaxGuests}"/>
                </Grid>

                <!-- ===== Precio ===== -->
                <Grid Grid.Row="5" Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Foreground="#6B7280"
                           Text="Precio/noche:"/>

                    <TextBlock Grid.Column="1"
                           FontWeight="Bold"
                           Text="{Binding PricePerNight, StringFormat={}{0}€}"/>
                </Grid>

                <!-- ===== Separador 2 ===== -->
                <Separator Grid.Row="6"
                       Margin="0,12,0,12"
                       Background="#E5E7EB"/>

                <!-- ===== Extras ===== -->
                <StackPanel Grid.Row="7">
                    <TextBlock>
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Setter Property="Text" Value="✓ Cama extra"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ExtraBed}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <TextBlock Margin="0,6,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Setter Property="Text" Value="✓ Cuna disponible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Crib}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <!-- ===== Botones (abajo del todo) ===== -->
                <Grid Grid.Row="9" Margin="0,12,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                        Style="{StaticResource UpdateBookingBtn}"
                        Content="edit"
                        Command="{Binding DataContext.GoUpdateRoomCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                        CommandParameter="{Binding}"/>

                    <!-- Botón reseñas (estrella) -->
                    <Button Grid.Column="2"
                            ToolTip="Ver reseñas"
                            Command="{Binding DataContext.ShowReviewsCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                            CommandParameter="{Binding}"
                            Cursor="Hand"
                            Padding="10,6"
                            BorderThickness="0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#FFC107"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" 
                                                    Background="{TemplateBinding Background}" 
                                                    Padding="{TemplateBinding Padding}" 
                                                    CornerRadius="4"
                                                    Cursor="Hand">
                                                <TextBlock Text="★" 
                                                           FontSize="16" 
                                                           Foreground="White" 
                                                           HorizontalAlignment="Center" 
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#e0a800"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#c69500"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Grid.Column="4"
                        Style="{StaticResource DeleteBookingBtn}"
                        Content="delete"
                        Command="{Binding DataContext.DeleteRoomCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                        CommandParameter="{Binding}"/>
                </Grid>
            </Grid>
        </Border>
    </DataTemplate>
</ResourceDictionary>
